@model BookDto

<form asp-action="BookEdit">
    <input hidden asp-for="BookId"/>
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Update Book</h1>
        <hr />
        <div class="row">
            @* Name *@
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Book Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @* Author *@
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Author</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            @* Genre *@
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Genre</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            @* Description *@
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @* Rating *@
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Rating </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            @* Size *@
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Size </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            @* Language *@
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Language </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>

            @* buttons *@
            <div class="col-5 offset-2">
                <a asp-action="BookIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Edit" class="btn btn-success form-control" />
            </div>
        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}